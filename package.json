{
  "name": "cerveceria-usc",
  "version": "1.0.0",
  "description": "Plataforma completa de cadena de suministro para Cervecería USC con automatización RPA - Vue.js, Fastify, Prisma y PostgreSQL",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev:backend": "npm run dev -w packages/backend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "npm run build -w packages/frontend",
    "build:backend": "npm run build -w packages/backend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "npm run test -w packages/frontend",
    "test:backend": "npm run test -w packages/backend",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "npm run lint -w packages/frontend",
    "lint:backend": "npm run lint -w packages/backend",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "npm run lint:fix -w packages/frontend",
    "lint:fix:backend": "npm run lint:fix -w packages/backend",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker-compose.yml logs -f",
    "db:migrate": "npm run db:migrate -w packages/backend",
    "db:seed": "npm run db:seed -w packages/backend",
    "db:studio": "npm run db:studio -w packages/backend",
    "clean": "npm run clean -w packages/frontend && npm run clean -w packages/backend",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "packages/frontend/**/*.{js,jsx,ts,tsx,vue}": [
      "npm run lint:fix:frontend",
      "git add"
    ],
    "packages/backend/**/*.{js,ts}": [
      "npm run lint:fix:backend",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "cadena-de-suministro",
    "supply-chain",
    "cerveceria",
    "usc",
    "rpa",
    "automatizacion",
    "inventario",
    "vue",
    "fastify",
    "prisma",
    "postgresql",
    "monorepo",
    "proyecto-universitario"
  ],
  "author": "Equipo Cervecería USC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Marmo03/cerveceria-usc.git"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "pg": "^8.16.3",
    "prisma": "^5.22.0"
  }
}
